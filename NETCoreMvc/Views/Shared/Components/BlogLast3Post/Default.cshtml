@using EntityLayer.Entities
@model List<Blog>

<div class="tech-btm">
	<h3>Latest Posts</h3>
	@foreach (var item in Model)
	{
		
	
	<div class="blog-grids row mb-3">
		<div class="col-md-5 blog-grid-left">
			<a href="/Blog/BlogDetails/@item.BlogId">
				<img src="~/web/images/4.jpg" class="card-img-top img-fluid" alt="">
			</a>
		</div>
		<div class="col-md-7 blog-grid-right">

			<h5>
					<a href="/Blog/BlogDetails/@item.BlogId">@(item.Content.Length > 50 ? item.Content.Substring(0, item.Content.Substring(0, 55).LastIndexOf(" "))+"..." : item.Content +"...") </a>
			</h5>
			<div class="sub-meta">
				<span>
						<i class="far fa-clock"></i> @(((DateTime)item.CreatedDate).ToString("dd.MM.yyyy"))
				</span>
			</div>
		</div>

	</div>
	}
	
</div>