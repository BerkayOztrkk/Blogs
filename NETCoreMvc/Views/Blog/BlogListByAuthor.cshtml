@using EntityLayer.Entities
@model List<Blog>
@{
	ViewData["Title"] = "BlogListByAuthor";
	Layout = "~/Views/Shared/AuthorLayout.cshtml";
}

<h1> Authors Blogs</h1>



<table class="table table-bordered">
	<tr>
		<th>#</th>
		<th>Name</th>
		<th>Created Date</th>
		<th>Status</th>
		<th></th>
		<th></th>


	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.BlogId</td>
			<td>@item.Name</td>
			<td>@(((DateTime)item.CreatedDate).ToString("dd.MM.yyyy"))</td>
			<td>@item.Status</td>
			<td><a href="/Blog/EditBlog/@item.BlogId" class="btn btn-info">Edit</a></td>
			<td><a href="/Blog/DeleteBlog/@item.BlogId" onclick="return confirm('Are you sure for delete');" class="btn btn-danger">Sil</a></td>

		</tr>
	}
</table>
<br />
<a href="#" class="btn btn-success">Create New Blog</a>