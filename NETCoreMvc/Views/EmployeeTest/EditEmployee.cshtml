@model NETCoreMvc.Controllers.Class1

@{
    ViewData["Title"] = "EditEmployee";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Edit Employee</h1>

<form method="post">
    <label>Id</label>
    @Html.TextBoxFor(x=>x.Id,new{@class="form-control"})
