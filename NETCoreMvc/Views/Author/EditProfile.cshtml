@model UserUpdateVM
@{
    ViewData["Title"] = "EditProfile";
    Layout = "~/Views/Shared/AuthorLayout.cshtml";
}


@using (Html.BeginForm("EditProfile", "Author", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Edit Profile</h4>
             
                    
                <form class="forms-sample" method="post">
                  
                    <div class="form-group">
                        <label for="exampleInputName1">Username</label>
                        <input asp-for="@Model.username" class="form-control" id="exampleInputName1" >
                    </div> 
                    <div class="form-group">
                        <label for="exampleInputName1">Name</label>
                        <input asp-for="@Model.name" class="form-control" id="exampleInputName1" >
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Email address</label>
                        <input asp-for="@Model.email" class="form-control" id="exampleInputEmail3" >
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Password</label>
                        <input type="text" asp-for="@Model.password" class="form-control" id="exampleInputPassword4" >
                    </div>
                    
                    
                  
                    <button type="submit" class="btn btn-gradient-primary mr-2">Submit</button>
                    <button asp-action ="Index" asp-controller="Dashboard" class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>
}